<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="#000"
    android:id="@+id/holder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/task_border_background"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="15dp"
        android:id="@+id/job_list">

        <TextView
            android:id="@+id/job_id"
            android:text="@string/app_name"
            style="@style/task_open_text"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"/>

        <TextView
            android:id="@+id/assign_date"
            android:text="@string/app_name"
            style="@style/task_open_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/divider"/>

        <TextView
            android:id="@+id/job_item"
            android:text="@string/app_name"
            style="@style/task_open_text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_id"/>

        <View style="@style/line"
            android:id="@+id/line"
            android:layout_below="@id/job_item"/>

        <TextView
            android:id="@+id/customer"
            android:layout_marginBottom="5dp"
            android:text="@string/error_unknown"
            style="@style/task_open_text"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/job_type"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:background="@drawable/task_type_background"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>


